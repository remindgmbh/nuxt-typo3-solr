        "@remindgmbh/eslint-config-nuxt": "^1.0.4",
        "@remindgmbh/nuxt-typo3": "ssh://git@github.com:remindgmbh/nuxt-typo3#develop",
        "@remindgmbh/stylelint-config": "^1.0.1",
        "@types/node": "^18.14.2",
        "eslint": "^8.35.0",
        "nuxt": "^3.2.2",
