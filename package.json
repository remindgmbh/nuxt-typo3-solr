{
    "name": "@remindgmbh/nuxt-typo3-solr",
    "version": "1.0.0",
    "author": "David Mellen <d.mellen@remind.de>",
    "license": "BSD-3-Clause",
    "repository": {
        "type": "git",
        "url": "https://github.com/remindgmbh/nuxt-typo3-solr"
    },
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/module.mjs",
            "require": "./dist/module.cjs"
        }
    },
    "main": "./dist/module.cjs",
    "types": "./dist/types.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "yarn stub && nuxi dev playground",
        "dev:build": "nuxi build playground",
        "lint": "yarn lint:prettier && yarn lint:script && yarn lint:style",
        "lint:prettier": "prettier --check .",
        "lint:script": "eslint --ext \".js,.ts,.vue\" .",
        "lint:style": "stylelint \"**/*.{vue,[s]css}\"",
        "prepare": "yarn stub && nuxt-module-build",
        "prepublish": "yarn lint",
        "preview": "nuxi preview playground",
        "stub": "nuxt-module-build --stub && nuxi prepare playground"
    },
    "dependencies": {
        "@nuxt/kit": "^3.2.2",
        "defu": "^6.1.2"
    },
    "devDependencies": {
        "@nuxt/module-builder": "^0.2.1",
